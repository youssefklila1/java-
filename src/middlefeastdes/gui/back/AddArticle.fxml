<AnchorPane prefHeight="647.0" prefWidth="1000.0" style="-fx-background-color: #121212;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="middlefeastdes.gui.back.AddArticleController">
   <children>
      <VBox>
         <children>
            <Label fx:id="lblTask" text="Add article" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <VBox alignment="CENTER_LEFT" prefHeight="462.0" prefWidth="231.0" spacing="20.0">
               <children>
                  <VBox alignment="CENTER_LEFT" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="Name :" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField fx:id="tfName" stylesheets="@../../css/style.css" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="125.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="Description :" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="taDescription" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="214.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <Label text="Recipe :" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextArea fx:id="taReciep" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefWidth="231.0" spacing="10.0">
                     <children>
                        <Label prefHeight="20.0" prefWidth="55.0" text="Image :" textFill="WHITE">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <HBox>
                           <children>
                              <TextField fx:id="nomImage" prefHeight="28.0" styleClass="text-field" stylesheets="@../../css/style.css" />
                              <Button fx:id="ImageArticle" mnemonicParsing="false" onAction="#selectImage" prefWidth="91.0" styleClass="buttonImport" stylesheets="@../../css/ButtonStyle.css" text="Import" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="50.0" top="20.0" />
         </padding>
      </VBox>
      <Button fx:id="buttonAdd" layoutX="441.0" layoutY="460.0" mnemonicParsing="false" onAction="#ajouter" stylesheets="@../../css/ButtonStyle.css" text="Add" />
   </children>
</AnchorPane>
